# ─── Ghostty Config ───────────────────────────────────────────

# Theme
theme = TokyoNight

# Font
font-family = JetBrainsMono Nerd Font
font-size = 14

# Window
macos-titlebar-style = "transparent"
window-padding-balance = true
window-padding-x = 8
window-padding-y = 4
window-theme = "ghostty"
window-decoration = true
background-blur-radius = 5
background-opacity = 0.85
initial-window = true
quick-terminal-size = 100%

# Scroll
keybind = shift+up=scroll_page_up
keybind = shift+down=scroll_page_down

# Pass keys through to tmux/apps
keybind = ctrl+b=unbind
keybind = ctrl+j=unbind
keybind = ctrl+k=unbind

# Multi-line input for Claude Code
keybind = shift+enter=text:\n
