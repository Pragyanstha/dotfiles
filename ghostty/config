# ─── Ghostty Config ───────────────────────────────────────────

# Theme
theme = Catppuccin Mocha

# Font
font-family = JetBrainsMono Nerd Font
font-size = 14

# Pane creation
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# Close pane
keybind = super+w=close_surface

# Pane navigation (vim-style)
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# Pane resize (vim-style)
keybind = super+ctrl+h=resize_split:left,40
keybind = super+ctrl+j=resize_split:down,40
keybind = super+ctrl+k=resize_split:up,40
keybind = super+ctrl+l=resize_split:right,40

# Window
macos-titlebar-style = "transparent"
window-padding-balance = true
window-padding-x = 0
window-padding-y = 0
window-theme = "ghostty"
background-blur-radius = 20
background-opacity = 0.65

# Equalize splits
keybind = super+equal=equalize_splits

# Multi-line input for Claude Code
keybind = shift+enter=text:\n

# Window
window-padding-x = 8
window-padding-y = 4
window-decoration = true
